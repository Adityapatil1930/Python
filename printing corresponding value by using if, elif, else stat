print("Please enter the values from 0 to 4")
x = int(input("Enter a number: "))
if x==0:
    print("You entered:", x)
elif x==1:
    print("You entered:", x)
elif x==2:
    print("You entered:", x)
elif x==3:
    print("You entered:", x)
elif x==4:
    print("You entered:", x)
else:
    print("Beyond the range than specified")
